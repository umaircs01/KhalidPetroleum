                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="number" id=txtOpeningMeter class="form-control" placeholder="Enter Reading of meter">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="newVehicle">Add New Vehicle</label>
                                        <div class="form-group">
                                            <div class="button-demo js-modal-buttons">
